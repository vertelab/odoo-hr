<odoo>
    <data>
        <record id="hr_department_partner_form_view" model="ir.ui.view">
            <field name="name">hr.department.partner</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <field name="address_id" widget="many2many_tags"/>
                    <field name="address_details" attrs="{'invisible': [('show_address_details', '=', False)]}"/>
                    <field name="one_address_detail" attrs="{'invisible': [('show_address_details', '=', True)]}"/>
                    <field name="show_address_details" invisible="1"/>
                </field>
            </field>
        </record>

        <record id="hr_department_partner_kanban_view" model="ir.ui.view">
            <field name="name">hr.department.partner.kanban</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.hr_department_view_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban/templates/t/div/div[1]/div[hasclass('o_kanban_card_header_title')]/div[last()]"
                       position="after">
                    <div class="o_secondary">
                        <field name="show_address_details" invisible="1"/>
                    </div>
                    <div class="o_secondary">
                        <field name="address_id" attrs="{'invisible': [('show_address_details', '=', False)]}"/>
                    </div>
                    <div class="o_secondary">
                        <field name="one_address_detail" attrs="{'invisible': [('show_address_details', '=', True)]}"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="hr_department_partner_tree_view" model="ir.ui.view">
            <field name="name">hr.department.partner.tree</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_tree"/>
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <field name="show_address_details" invisible="1"/>
                    <field name="address_id" attrs="{'invisible': [('show_address_details', '=', False)]}"
                           string="Multiple Addresses"/>
                    <field name="one_address_detail" attrs="{'invisible': [('show_address_details', '=', True)]}"
                           string="Single Address"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
