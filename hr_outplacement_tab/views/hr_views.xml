<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="my_customer_inherit_hr_view" model="ir.ui.view">
        <field name="name">inherit.hr.view.my.customer</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="my_outplacements" string="Assigned outplacements">
                    <group>
                        <field name="outplacement_ids" nolabel="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
