<odoo>
    <data>
        <record id="view_hr_form_firstname" model="ir.ui.view">
            <field name="name">Add firstname and surnames</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_employee_firstname.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[1]" position="replace">
                    <div class="oe_edit_only">
                        <group>
                            <field name="firstname" attrs="{'required': [('lastname', '=', False)]}"/>
                            <field name="lastname" attrs="{'required': [('firstname', '=', False)]}"/>
                        </group>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
